// ejercicio1.cpp : Defines the entry point for the console application.
//^MANEJO DE SERIES
//REALIZAR LA SIGUIENTE S DE N TERMINOS:
#include "stdafx.h"
#include<iostream>
#include<string>

using namespace std ;

float serie (int n)
void main()
{
	float s=0 ; int i=1 ,exp=2 ; int den=1; int p=1 ;

	while (i<=n)
	{
	
		if (p>0)
		{
			s=s+fac(i)/(pow(den,exp);
		}
		else
		{
			s=s-fac(i)/(pow(den,exp);
		}
		
		den=den+2;
		exp=exp+2;
		p=p*-1;
		i=i+1;
	}
	return s;
}



//METODOS SOBRE MANEJO DE DIGITOS
//DADO UN NUMERO ECNOTRAR EL DIGITO MENOR
//EJEMPLO : num=71834 resultado :1
#include "stdafx.h"
#include<iostream>
#include<string>

using namespace std ;

 int menorDigito(int num)
 {
	 int men=9,d;
	 while (num > 0)
	 {
		 d=num % 10;
		 if ( d > men)
			 men=d;
		 num=num/10;
	 }
	 return men;
 }

